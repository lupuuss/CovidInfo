<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CovidInfo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryTransparent">#80FFFFFF</item>

        <item name="colorPositive">#4CAF50</item>
        <item name="colorNegative">#F44336</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:editTextColor">?colorOnPrimary</item>

    </style>

    <style name="Theme.CovidInfo.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_background_primary_variant</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Theme.CovidInfo.Dialog.NegativeButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.CovidInfo.Dialog.PositiveButton</item>
    </style>

    <style name="Theme.CovidInfo.Dialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="colorAccent">?colorOnPrimary</item>
    </style>
    <style name="Theme.CovidInfo.Dialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="colorAccent">?colorOnPrimary</item>
    </style>
</resources>