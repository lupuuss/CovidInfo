<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CovidInfo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1535aa</item>
        <item name="colorPrimaryRipple">#1F4DF4</item>
        <item name="colorPrimaryVariant">#072e84</item>
        <item name="colorBackground">#f2f4f7</item>
        <item name="colorOnPrimary">#f2f4f7</item>
        <item name="colorOnPrimaryTransparent">#80FFFFFF</item>

        <item name="colorPositive">#4CAF50</item>
        <item name="colorNegative">#F44336</item>

        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="android:editTextColor">?colorOnPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="colorContrast">#00BCD4</item>
        <item name="actionBarStyle">@style/Theme.CovidInfo.ActionBar</item>

        <item name="snackbarStyle">@style/Theme.CovidInfo.SnackBar</item>
        <item name="snackbarButtonStyle">@style/Theme.CovidInfo.SnackBar.Button</item>
        <item name="snackbarTextViewStyle">@style/Theme.CovidInfo.SnackBar.TextView</item>

    </style>

    <style name="Theme.CovidInfo.SnackBar" parent="Widget.MaterialComponents.Snackbar"/>

    <style name="Theme.CovidInfo.SnackBar.Button" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.CovidInfo.SnackBar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.CovidInfo.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="titleTextStyle">@style/Theme.CovidInfo.ActionBar.Title</item>
    </style>

    <style name="Theme.CovidInfo.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="Theme.CovidInfo.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_background_primary_variant</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.CovidInfo.Dialog.NegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.CovidInfo.Dialog.PositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.CovidInfo.Dialog.NegativeButton</item>
    </style>

    <style name="Theme.CovidInfo.Dialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.CovidInfo.Dialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.CovidInfo.RefreshableTitle" parent="Theme.CovidInfo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="Theme.CovidInfo.SummaryStat" parent="Theme.CovidInfo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.CovidInfo.SmallFab" parent="Theme.CovidInfo">
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="contentDescription">@string/pick</item>
        <item name="fabCustomSize">30dp</item>
        <item name="tint">?colorPrimaryVariant</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.CovidInfo.PickActionButton" parent="Theme.CovidInfo.SmallFab">
        <item name="android:src">@drawable/ic_baseline_menu_24</item>
    </style>

    <style name="Theme.CovidInfo.PickSubActionButton" parent="Theme.CovidInfo.SmallFab">
        <item name="android:src">@drawable/ic_baseline_menu_open_24</item>
    </style>

    <style name="Theme.CovidInfo.RefreshButton" parent="Theme.CovidInfo.SmallFab">
        <item name="android:src">@drawable/ic_baseline_refresh_24</item>
    </style>
</resources>